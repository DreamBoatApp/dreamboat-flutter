rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ═══════════════════════════════════════════════════════════════════
    // REDEEM CODES - PRO versiyon için ücretsiz kod doğrulama
    // ═══════════════════════════════════════════════════════════════════
    // Kullanıcılar kod doğrulamak için okuyabilir
    // Sadece Admin SDK (Cloud Functions) yazabilir
    match /redeemCodes/{codeId} {
      allow read: if true;
      allow write: if false;
    }
    
    // ═══════════════════════════════════════════════════════════════════
    // CONFIG / API KEYS - Tamamen korumalı
    // ═══════════════════════════════════════════════════════════════════
    // Hiçbir istemci erişemez, sadece Admin SDK
    match /config/{document=**} {
      allow read, write: if false;
    }
    
    // ═══════════════════════════════════════════════════════════════════
    // DEFAULT - Diğer tüm koleksiyonlar kapalı
    // ═══════════════════════════════════════════════════════════════════
    // Güvenlik için varsayılan olarak tüm erişim engellenir
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
